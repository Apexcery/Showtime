@model Showtime.Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Trending";
}

<nav>
    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-trending-movies-tab" data-toggle="tab" href="#nav-trending-movies" role="tab" aria-controls="nav-trending-movies" aria-selected="True">Movies</a>
        <a class="nav-item nav-link" id="nav-trending-tv-tab" data-toggle="tab" href="#nav-trending-tv" role="tab" aria-controls="nav-trending-tv" aria-selected="True">TV</a>
    </div>
</nav>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-trending-movies" role="tabpanel" aria-labelledby="nav-trending-movies-tab">

        <div class="pb-2 mt-2 mb-4 border-bottom text-center">
            <h1>Trending Movies</h1>
        </div>

        <div class="card-deck justify-content-center">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-auto mb-3">
                    @{ await Html.RenderPartialAsync("~/WebFragments/MediaCard.cshtml", movie);}
                </div>
            }
        </div>

    </div>
    <div class="tab-pane fade" id="nav-trending-tv" role="tabpanel" aria-labelledby="nav-trending-tv-tab">

        <div class="pb-2 mt-2 mb-4 border-bottom text-center">
            <h1>Trending TV</h1>
        </div>

        <div class="card-deck justify-content-center">
            @foreach (var tv in Model.Tv)
            {
                <div class="col-auto mb-3">
                    @{ await Html.RenderPartialAsync("~/WebFragments/MediaCard.cshtml", tv);}
                </div>
            }
        </div>

    </div>
</div>